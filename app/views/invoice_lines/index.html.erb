<h1>Listing invoice_lines</h1>

<table>
  <thead>
    <tr>
      <th>Invoice</th>
      <th>Line no</th>
      <th>Product code</th>
      <th>Quantity</th>
      <th>Retail price</th>
      <th>Subtotal</th>
      <th>Invoice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_lines.each do |invoice_line| %>
      <tr>
        <td><%= invoice_line.invoice_id %></td>
        <td><%= invoice_line.line_no %></td>
        <td><%= invoice_line.product_code %></td>
        <td><%= invoice_line.quantity %></td>
        <td><%= invoice_line.retail_price %></td>
        <td><%= invoice_line.subtotal %></td>
        <td><%= invoice_line.invoice %></td>
        <td><%= link_to 'Show', invoice_line %></td>
        <td><%= link_to 'Edit', edit_invoice_line_path(invoice_line) %></td>
        <td><%= link_to 'Destroy', invoice_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

