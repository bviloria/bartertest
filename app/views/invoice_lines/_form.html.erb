<%= simple_form_for(@invoice_line) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :invoice_id %>
    <%= f.input :line_no %>
    <%= f.input :product_code %>
    <%= f.input :quantity %>
    <%= f.input :retail_price %>
    <%= f.input :subtotal %>
    <%= f.association :invoice %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
