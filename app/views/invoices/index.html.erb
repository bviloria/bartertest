<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => Invoice %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:terminal_id) %></th>
      <th><%= model_class.human_attribute_name(:transaction_id) %></th>
      <th><%= model_class.human_attribute_name(:origin_invoice_id) %></th>
      <th><%= model_class.human_attribute_name(:site_code) %></th>
      <th><%= model_class.human_attribute_name(:transaction_code) %></th>
      <th><%= model_class.human_attribute_name(:type_code) %></th>
      <th><%= model_class.human_attribute_name(:document_no) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.id %></td>
        <td><%= invoice.id %></td>
        <td><%= invoice.terminal_id %></td>
        <td><%= invoice.transaction_id %></td>
        <td><%= invoice.origin_invoice_id %></td>
        <td><%= invoice.site_code %></td>
        <td><%= invoice.transaction_code %></td>
        <td><%= invoice.type_code %></td>
        <td><%= invoice.document_no %></td>
        <td><%= invoice.status %></td>
        <td><%=l invoice.created_at, format: :long %></td>
        <td>
          <%= link_to invoice_path(invoice), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to invoice_path(invoice), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_invoice_path,
            :class => 'btn btn-primary' %>
