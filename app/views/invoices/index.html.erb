<h1>Listing invoices</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Terminal</th>
      <th>Transaction</th>
      <th>Origin invoice</th>
      <th>Site code</th>
      <th>Transaction code</th>
      <th>Type code</th>
      <th>Document no</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.id %></td>
        <td><%= invoice.terminal_id %></td>
        <td><%= invoice.transaction_id %></td>
        <td><%= invoice.origin_invoice_id %></td>
        <td><%= invoice.site_code %></td>
        <td><%= invoice.transaction_code %></td>
        <td><%= invoice.type_code %></td>
        <td><%= invoice.document_no %></td>
        <td><%= invoice.status %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_invoice_path %>
