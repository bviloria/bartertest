<%= form_for @invoice, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :terminal_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :terminal_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :transaction_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :transaction_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :origin_invoice_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :origin_invoice_id, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :site_code, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :site_code, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :transaction_code, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :transaction_code, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type_code, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :type_code, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :document_no, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :document_no, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :status, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  invoices_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
